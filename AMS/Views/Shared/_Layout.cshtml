</html>

<script>
    getInboxCount();
    leaveBalanceRefresh();
    function getInboxCount() {
        $.ajax({
            url: '/Leave/GetInboxCount',
            type: 'GET',
            beforeSend: function () {
                hideSpinner();
            },
            success: function (data) {
                $('#leaveRequestsBadge').text(data);
                setInterval(getInboxCount, 2 * 60 * 1000);
            },
            error: function () {
                console.log('Error occurred while fetching chat message data.');
            }
        });
    }
    function leaveBalanceRefresh() {
        $.ajax({
            url: '/Leave/LeaveBalanceReferesh',
            type: 'GET',
            beforeSend: function () {
                hideSpinner();
            }
        });
    }
    //function markAbsent() {
    //    $.ajax({
    //        url: '/Attendance/MarkAbsent',
    //        type: 'GET',
    //        beforeSend: function () {
    //            hideSpinner();
    //        }
    //    });
    //}
    // Function to hide success and error alerts after a delay
    function hideAlerts() {
        $('#successAlert, #errorAlert').fadeOut(2000, function () {
            // Optional: Reset message and hide the alert
            $(this).hide();
        });
    }
    // Function to show the spinner
    function showSpinner() {
        $('.spinner-container').show();
    }

    // Function to hide the spinner
    function hideSpinner() {
        $('.spinner-container').fadeOut();
    }
    //add urls here in which you dont want to show loader/spinner
    var excludedUrls = ['/department/isnameavailable', '/shift/gettimevalues', '/card/isnameavailable', '/card/getcarddata'];

    $.ajaxSetup({
        beforeSend: function (xhr, settings) {
            if (excludedUrls.includes(settings.url.toLowerCase())) {
                return; // Skip the global spinner handling for this request
            } else {
                // Show spinner for other requests
                showSpinner();
            }
        },
        complete: function () {
            // Hide spinner for all requests
            hideSpinner();
        }
    });

    // JavaScript code
    $(document).ready(function () {
        // Jab bhi koi li element pe hover hota hai
        $(".no-open").hover(function () {
            // .sidebar-left-secondary element ke .open class ko remove karein
            $(".sidebar-left-secondary").removeClass("open");
        });
    });

</script>